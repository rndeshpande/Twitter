<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Tweet">
        <item name="android:layout_margin">@dimen/tweet_margin</item>
    </style>

    <style name="UserName">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="fontPath">fonts/Helvetica Neu Bold.ttf</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

    <style name="ScreenName">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="fontPath">fonts/HelveticaNeue Medium.ttf</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

    <style name="Verified">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
    </style>

    <style name="CreatedAt">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="android:textSize">@dimen/created_text_size</item>
        <item name="fontPath">fonts/HelveticaNeue Medium.ttf</item>
    </style>

    <style name="Body">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
        <item name="fontPath">fonts/HelveticaNeue Medium.ttf</item>
        <item name="android:layout_marginTop">@dimen/body_margin_top</item>
    </style>

    <style name="Fab">
        <item name="android:backgroundTint">@color/fabBackgroundTint</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="TweetCreate">
        <item name="android:background">@drawable/tweet_create</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontPath">fonts/Helvetica Neu Bold.ttf</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>
    <style name="TweetNewText">
        <item name="android:textSize">@dimen/tweet_text_size</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontPath">fonts/HelveticaNeue Medium.ttf</item>
    </style>
    <style name="TweetNewCount">
        <item name="android:textSize">@dimen/tweet_text_size</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="fontPath">fonts/HelveticaNeue Medium.ttf</item>
    </style>
</resources>
