<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Tweet">
        <item name="android:layout_margin">@dimen/tweet_margin</item>
    </style>

    <style name="UserName">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

    <style name="ScreenName">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

    <style name="Verified">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
    </style>

    <style name="CreatedAt">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

    <style name="Body">
        <item name="android:layout_marginStart">@dimen/user_name_margin_start</item>
        <item name="android:textSize">@dimen/tweet_text_size</item>
    </style>

</resources>
